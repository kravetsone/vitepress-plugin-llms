{
	"name": "vitepress-plugin-llms",
	"version": "0.0.2",
	"description": "A VitePress plugin for generating LLM-friendly documentation in lightweight Markdown format",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.js",
	"funding": "https://github.com/okineadev/vitepress-plugin-llms?sponsor=1",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/okineadev/vitepress-plugin-llms.git"
	},
	"author": {
		"name": "Okinea Dev",
		"email": "hi@okinea.dev",
		"url": "https://github.com/okineadev"
	},
	"keywords": ["vitepress", "plugin", "llms", "documentation", "ai"],
	"scripts": {
		"lint": "biome check --fix",
		"format": "biome format --write",
		"test": "bun test",
		"preversion": "bun run format && git add .",
		"build": "tsup",
		"prepare": "husky",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs"
	},
	"dependencies": {
		"minimatch": "^10.0.1",
		"picocolors": "^1.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.13.10",
		"bun-types": "^1.2.5",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"tsup": "^8.4.0",
		"typescript": "^5.8.2",
		"vitepress": "^1.6.3",
		"vitepress-plugin-group-icons": "^1.3.7"
	},
	"trustedDependencies": ["@biomejs/biome", "esbuild"],
	"lint-staged": {
		"{src,tests}/**/*.ts": "bun test",
		"*": "bun run format --no-errors-on-unmatched"
	}
}
